<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wres" type="com.jitlogic.zico.client.widgets.WidgetResources"/>
    <g:DockLayoutPanel unit="PX" styleName="{wres.formCss.form}">
        <g:center>
            <g:HTMLPanel>
                <table>
                    <tr>
                        <td>Old password:</td>
                        <td><g:PasswordTextBox ui:field="txtOldPassword"/></td>
                    </tr>
                    <tr>
                        <td>New password:</td>
                        <td><g:PasswordTextBox ui:field="txtNewPassword"/></td>
                    </tr>
                    <tr>
                        <td>Repeat password:</td>
                        <td><g:PasswordTextBox ui:field="txtRepPassword"/></td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:center>
        <g:south size="42">
            <g:FlowPanel styleName="{wres.formCss.btnline}">
                <g:Button ui:field="btnOk">OK</g:Button>
                <g:Button ui:field="btnCancel">Cancel</g:Button>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>