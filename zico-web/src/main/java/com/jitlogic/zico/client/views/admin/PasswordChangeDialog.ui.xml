<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wres" type="com.jitlogic.zico.client.widgets.WidgetResources"/>
    <g:HTMLPanel styleName="{wres.formCss.form}">
        <table>
            <tr>
                <td>Old password:</td>
                <td><g:TextBox ui:field="txtOldPassword"/></td>
            </tr>
            <tr>
                <td>New password:</td>
                <td><g:TextBox ui:field="txtNewPassword"/></td>
            </tr>
            <tr>
                <td>Repeat password:</td>
                <td><g:TextBox ui:field="txtRepPassword"/></td>
            </tr>
            <tr>
                <td><g:Button ui:field="btnOk">OK</g:Button></td>
                <td><g:Button ui:field="btnCancel">Cancel</g:Button></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>