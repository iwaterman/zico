<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wres" type="com.jitlogic.zico.client.widgets.WidgetResources"/>
    <g:DockLayoutPanel unit="PX" styleName="{wres.formCss.form}">
        <g:center>
            <g:HTMLPanel>
                <table>
                    <tr>
                        <td width="75px" align="right">Order:</td>
                        <td><g:TextBox ui:field="txtOrder" width="75px"/></td>
                    </tr>
                    <tr>
                        <td width="75px" align="right">Condition:</td>
                        <td><g:TextBox ui:field="txtCondition" width="450px"/></td>
                    </tr>
                    <tr>
                        <td width="75px" align="right">Template:</td>
                        <td><g:TextBox ui:field="txtTemplate" width="450px"/></td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:center>
        <g:south size="42">
            <g:FlowPanel styleName="{wres.formCss.btnline}">
                <g:Button ui:field="btnOk">OK</g:Button>
                <g:Button ui:field="btnCancel">Cancel</g:Button>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>