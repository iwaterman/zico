<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wres" type="com.jitlogic.zico.client.widgets.WidgetResources"/>
    <g:HTMLPanel styleName="{wres.formCss.form}">
        <table>
            <tr>
                <td>Order:</td>
                <td><g:TextBox ui:field="txtOrder" width="75"/></td>
            </tr>
            <tr>
                <td>Condition:</td>
                <td><g:TextBox ui:field="txtCondition" width="450"/></td>
            </tr>
            <tr>
                <td>Template:</td>
                <td><g:TextBox ui:field="txtTemplate" width="450"/></td>
            </tr>
            <tr>
                <td><g:Button ui:field="btnOk">OK</g:Button></td>
                <td><g:Button ui:field="btnCancel">Cancel</g:Button></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>