<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <table>
            <tr>
                <td>Order:</td>
                <td><g:TextBox ui:field="txtOrder"/></td>
            </tr>
            <tr>
                <td>Condition:</td>
                <td><g:TextBox ui:field="txtCondition"/></td>
            </tr>
            <tr>
                <td>Template:</td>
                <td><g:TextBox ui:field="txtTemplate"/></td>
            </tr>
            <tr>
                <td><g:Button ui:field="btnOk">OK</g:Button></td>
                <td><g:Button ui:field="btnCancel">Cancel</g:Button></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>