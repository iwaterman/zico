<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wres" type="com.jitlogic.zico.widgets.client.WidgetResources"/>
    <g:DockLayoutPanel unit="PX" styleName="{wres.formCss.form}">
        <g:center>
            <g:HTMLPanel>
                <table>
                    <tr>
                        <td><g:Label>Host name:</g:Label></td>
                        <td><g:TextBox width="175px" ui:field="txtHostName"/></td>
                    </tr>
                    <tr>
                        <td><g:Label>Host address:</g:Label></td>
                        <td><g:TextBox width="175px" ui:field="txtHostAddr"/></td>
                    </tr>
                    <tr>
                        <td><g:Label>Host group:</g:Label></td>
                        <td><g:TextBox width="175px" ui:field="txtHostGroup"/></td>
                    </tr>
                    <tr>
                        <td><g:Label>Host description:</g:Label></td>
                        <td><g:TextBox width="175px" ui:field="txtHostDesc"/></td>
                    </tr>
                    <tr>
                        <td><g:Label>Host password:</g:Label></td>
                        <td><g:TextBox width="175px" ui:field="txtHostPass"/></td>
                    </tr>
                    <tr>
                        <td><g:Label>Store size (GB):</g:Label></td>
                        <td><g:TextBox width="75px" ui:field="txtMaxSize"/></td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:center>
        <g:south size="42">
            <g:FlowPanel styleName="{wres.formCss.btnline}">
                <g:Button ui:field="btnOk">OK</g:Button>
                <g:Button ui:field="btnCancel">Cancel</g:Button>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>


