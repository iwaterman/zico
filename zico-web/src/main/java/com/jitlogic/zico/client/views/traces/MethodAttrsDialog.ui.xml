<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:gc='urn:import:com.google.gwt.user.cellview.client'>

    <ui:with field="wres" type="com.jitlogic.zico.client.widgets.WidgetResources"/>

    <ui:style>
        .attrname {
            padding-top:  4px;
            padding-left: 6px;
        }
        .attrhdr {
            padding-top:  4px;
            padding-left: 75px;
        }
        .attrval {
            resize: none;
            left: 5px;
            margin-left: 3px;
            background: white;
            border: 1px solid #ccc;
            border-radius: 2px;
        }
        .grid {
            margin-left: 3px;
            margin-right: 3px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" ui:field="container" styleName="{wres.formCss.form}">
        <g:west size="200">
            <g:DockLayoutPanel unit="PX">
                <g:north size="24">
                    <g:Label styleName="{style.attrhdr}">Attributes</g:Label>
                </g:north>
                <g:center>
                    <gc:DataGrid addStyleNames="{style.grid}" ui:field="attrGrid"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:west>
        <g:center>
            <g:DockLayoutPanel unit="PX">
                <g:north size="22">
                    <g:Label ui:field="lblAttrName" styleName="{style.attrname}">Selected Attribute:</g:Label>
                </g:north>
                <g:center>
                    <g:TextArea ui:field="txtAttrVal" styleName="{style.attrval}" readOnly="true"
                                width="690px" height="565px">Please wait...</g:TextArea>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>