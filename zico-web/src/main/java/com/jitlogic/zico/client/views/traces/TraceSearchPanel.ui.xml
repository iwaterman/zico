<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:gc='urn:import:com.google.gwt.user.cellview.client'
             xmlns:z="urn:import:com.jitlogic.zico.client.widgets">
    <ui:with field="resources" type="com.jitlogic.zico.client.resources.Resources"/>
    <ui:with field="wres" type="com.jitlogic.zico.client.widgets.WidgetResources"/>
    <ui:style>
        .toolbar {
            display: flex;
            padding: 3px;
        }
        .filter {
            flex: 10;
            margin-left: 4px;
            margin-right: 4px;
        }
        .item {
            flex: 0 1 auto;
            margin-left: 2px;
            margin-right: 2px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" ui:field="panel">
        <g:north size="28">
            <g:HTMLPanel addStyleNames="{style.toolbar} {wres.formCss.form}">
                <z:ToolButton upIcon="{resources.methodTreeIcon}" toggleMode="true"
                              addStyleNames="{style.item}" ui:field="btnDeepSearch"/>
                <z:ToolButton upIcon="{resources.errorMarkIcon}" toggleMode="true"
                              addStyleNames="{style.item}" ui:field="btnErrors"/>
                <z:ToolButton upIcon="{resources.sort}" toggleMode="true"
                              addStyleNames="{style.item}" ui:field="btnReverse"/>
                <g:ListBox multipleSelect="false" width="80px"
                           addStyleNames="{style.item}" ui:field="lstTraceType"/>
                <g:TextBox width="80px"
                           addStyleNames="{style.item}" ui:field="txtDuration"/>
                <z:ToolButton upIcon="{resources.eqlIcon}" toggleMode="true"
                              addStyleNames="{style.item}" ui:field="btnEnableEql"/>
                <g:TextBox width="250px"
                           addStyleNames="{style.filter}" ui:field="txtFilter"/>
                <g:TextBox width="130px"
                           addStyleNames="{style.item}" ui:field="txtSinceDate"/>
                <z:ToolButton upIcon="{resources.searchIcon}"
                              addStyleNames="{style.item}" ui:field="btnRunSearch"/>
                <z:ToolButton upIcon="{resources.clearIcon}"
                              addStyleNames="{style.item}" ui:field="btnClearFilters"/>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <gc:DataGrid ui:field="grid"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>